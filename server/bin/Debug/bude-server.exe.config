<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <startup>
    <supportedRuntime version="v2.0.50727" />
  </startup>
  <appSettings>
    <add key="ClientSettingsProvider.ServiceUri" value="" />
    <add key="messagingBrokerHostName" value="localhost"/>
    <add key="phantomJsPath" value="phantomjs" />
    <add key="webUrl" value="http://bude.bradyandkatie.com" />
    <add key="emailFrom" value="bude@geekytidbits.com" />
    <!--Assumed to be in ENV path-->
    <add key="phantomJsDebugMode" value="true" />
  </appSettings>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="methodTarget" xsi:type="MethodCall" methodName="LogMessage" className="ebud.TransactionsFetcher.LogManager, ebud.TransactionsFetcher">
        <parameter layout="${callsite}" />
        <parameter layout="${message}" />
      </target>
      <target name="logfileTarget" xsi:type="File" autoFlush="true" fileName="/var/log/bude-transaction-server" layout="${longdate} |${level:uppercase=true}|${logger}|${message}|${exception}" />
      <target name="consoleTarget" xsi:type="Console" layout="${longdate}|${level:uppercase=true}|${logger}|${message}|${exception}"  />
    </targets>
    <rules>
      <logger name="*" levels="Info,Warn,Error,Fatal,Trace,Debug" writeTo="consoleTarget,logfileTarget" />
      <logger name="*" levels="Error,Fatal,Trace,Debug" writeTo="logfileTarget" />
      <logger name="*" levels="Error,Fatal" writeTo="logfileTarget,methodTarget" />
    </rules>
  </nlog>
  <connectionStrings>
    <add name="BUDE_PRODUCTION" connectionString="Server=localhost; Database=bude;Uid=bholt;Pwd=x8hXMfsxLmaUenX4;" providerName="MySql.Data.MySqlClient" />
  </connectionStrings>
  <system.web>
    <membership defaultProvider="ClientAuthenticationMembershipProvider">
      <providers>
        <add name="ClientAuthenticationMembershipProvider" type="System.Web.ClientServices.Providers.ClientFormsAuthenticationMembershipProvider, System.Web.Extensions, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" />
      </providers>
    </membership>
    <roleManager defaultProvider="ClientRoleProvider" enabled="true">
      <providers>
        <add name="ClientRoleProvider" type="System.Web.ClientServices.Providers.ClientRoleProvider, System.Web.Extensions, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" cacheTimeout="86400" />
      </providers>
    </roleManager>
  </system.web>
  <system.net>
    <mailSettings>
      <smtp>
        <network host="localhost"/>
      </smtp>
    </mailSettings>
  </system.net>
</configuration>